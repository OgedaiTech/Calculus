@page "/scenario"
@rendermode InteractiveServer

<PageTitle>Scenario</PageTitle>

<h1>Scenarios</h1>

<ScenarioCreate />

@if (_scenarios is null)
{
    <p>Loading...</p>
}
else
{
    <div class="d-flex flex-wrap gap-3 mt-3">
    @foreach (var scenario in _scenarios)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@scenario.Name</h5>
                    <p class="card-text">by @scenario.Author</p>
                </div>
            </div>
        }
    </div>
}
